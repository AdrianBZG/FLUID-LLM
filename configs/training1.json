{
  "task_name": "cylinder_task",
  "llm_backbone": "facebook/opt-125m",
  "llm_layers": 7,
  "llm_4bit_loading": false,
  "freeze_llm": false,
  "lora_config": {
    "r": 16,
    "lora_alpha": 256,
    "lora_dropout": 0.1,
    "bias": "none"
  },
  "half_precision": true,
  "flash_attention": true,
  "input_emb_layer_norm_eps": 1e-5,
  "pos_embedding_type": "pos",
  "use_patches_self_attention": false,
  "batch_size": 8,
  "num_epochs": 50,
  "epoch_size": 100,
  "learning_rate": 5e-4,
  "weight_decay": 0,
  "optimizer": "adam",
  "loss_function": "smape",
  "multiprocess": true,
  "num_workers": 8,
  "load_dir": "./ds/MGN/cylinder_dataset",
  "patch_size": [16, 16],
  "stride": [16, 16],
  "seq_len": 10,
  "seq_interval": 2,
  "resolution": 240,
  "plot_patches": true,
  "enable_wandb": false,
  "save_model_each": 5,
  "checkpoint_save_path": "model_checkpoints"
}