{
  "task_name": "cylinder_task",
  "llm_backbone": "huggyllama/llama-7b",
  "llm_layers": 32,
  "llm_4bit_loading": false,
  "freeze_llm": true,
  "lora_config": {
    "r": 8,
    "lora_alpha": 16,
    "lora_dropout": 0.1,
    "bias": "none"
  },
  "half_precision": true,
  "flash_attention": true,
  "input_emb_layer_norm_eps": 1e-5,
  "input_emb_layer_dropout": 0.1,
  "pos_embedding_type": "rope",
  "use_patches_self_attention": false,
  "batch_size": 24,
  "num_epochs": 100,
  "epoch_size": 100,
  "learning_rate": 0.01,
  "weight_decay": 0,
  "optimizer": "adam",
  "loss_function": "mse",
  "multiprocess": true,
  "num_workers": 8,
  "load_dir": "./ds/MGN_small/cylinder_dataset",
  "patch_size": [16, 16],
  "stride": [16, 16],
  "seq_len": 10,
  "seq_interval": 2,
  "resolution": 240,
  "plot_patches": true,
  "enable_wandb": false,
  "save_model_each": 5,
  "checkpoint_save_path": "model_checkpoints"
}